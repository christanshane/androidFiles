<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cosmo.prelimproject.Login">

    <TextView
        android:id="@+id/login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Username"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login_calculatorbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Calculator"
        android:layout_below="@+id/login_username"
        android:layout_alignStart="@+id/login_logoutbtn" />

    <Button
        android:id="@+id/login_logoutbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Logout"
        android:layout_below="@+id/login_calculatorbtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login_backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logoutbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text="Back to Main Menu" />
</RelativeLayout>
