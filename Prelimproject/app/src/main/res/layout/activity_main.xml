<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cosmo.prelimproject.MainActivity">

    <Button
        android:id="@+id/main_loginbtn"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:text="Login"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/main_accountbtn" />

    <Button
        android:id="@+id/main_accountbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Account"
        android:layout_below="@+id/main_loginbtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/main_exitbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Exit"
        android:layout_below="@+id/main_accountbtn"
        android:layout_alignStart="@+id/main_accountbtn" />
</RelativeLayout>
