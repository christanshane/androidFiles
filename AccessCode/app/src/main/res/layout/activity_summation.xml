<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cosmo.accesscode.summation">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operand 1"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/summation_multiply" />

    <EditText
        android:id="@+id/operand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/operand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="85dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operand 2"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="106dp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/operand1"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:id="@+id/summation_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="158dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/operand2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <Button
        android:id="@+id/summation_subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="158dp"
        android:layout_alignBaseline="@+id/summation_add"
        android:layout_alignBottom="@+id/summation_add"
        android:layout_toStartOf="@+id/summation_add" />

    <Button
        android:id="@+id/summation_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="158dp"
        android:layout_alignBaseline="@+id/summation_subtract"
        android:layout_alignBottom="@+id/summation_subtract"
        android:layout_toStartOf="@+id/summation_subtract" />

    <Button
        android:id="@+id/summation_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="158dp"
        android:layout_alignBaseline="@+id/summation_multiply"
        android:layout_alignBottom="@+id/summation_multiply"
        android:layout_toStartOf="@+id/summation_multiply" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="244dp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/summation_divide"
        android:layout_toStartOf="@+id/summation_multiply"
        android:layout_marginEnd="11dp" />

    <TextView
        android:id="@+id/answerfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="answer"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="244dp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/summation_multiply"
        android:layout_marginStart="55dp" />

    <Button
        android:id="@+id/summation_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to main menu"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="330dp"
        android:layout_below="@+id/answerfield"
        android:layout_toEndOf="@+id/summation_divide"
        android:layout_marginTop="69dp" />
</RelativeLayout>
